\end_layout

\begin_layout Itemize
\begin_inset Formula $x_{1}=x_{1}$
\end_inset

, 
\begin_inset Formula $x_{2}=x_{2}$
\end_inset

, 
\begin_inset Formula $x_{3}=x_{1}/x_{2}$
\end_inset

, 
\begin_inset Formula $x_{4}=\sin(x_{3})$
\end_inset

, 
\begin_inset Formula $x_{5}=x_{1}x_{2}$
\end_inset

