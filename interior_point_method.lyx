\begin{align*}
x^{(k+1)} & =x^{(k)}+\alpha_{k}^{\mathrm{pri}}\Delta x^{(k)};\\
(y^{(k+1)},s^{(k+1)}) & =(y^{(k)},s^{(k)})+\alpha_{k}^{\mathrm{dual}}(\Delta y^{(k)},\Delta s^{(k)});
\end{align*}

\end_inset


\end_layout

