\alpha_{\aff}^{\mathrm{dual}} & =\arg\max\{\alpha\in[0,1]|s^{(k)}+\alpha\Delta s^{\aff}\geq0\};\\
\mu & =x^{(k)\top}s^{(k)}/n;\\
\mu_{\aff} & =(x^{(k)}+\alpha_{\aff}^{\mathrm{pri}}\Delta x^{\aff})^{\top}(s^{(k)}+\alpha_{\aff}^{\mathrm{dual}}\Delta s^{\aff})/n;
